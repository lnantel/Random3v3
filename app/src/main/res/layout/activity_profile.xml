<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkBlue"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.nantel.louis.random3v3.ProfileActivity">

    <TextView
        android:id="@+id/blizIntroTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Your Blizzard username is"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/blizAvatarImg"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/default_avatar" />

        <TextView
            android:id="@+id/blizNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/blizAvatarImg"
            android:layout_toRightOf="@+id/blizAvatarImg"
            android:text="Unknown"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="18sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/blizNameTxt"
            android:layout_toRightOf="@+id/blizNameTxt"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/barStart"
                android:layout_width="wrap_content"
                android:layout_height="18sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10sp"
                android:layout_toEndOf="@+id/blizNameTxt"
                android:layout_toRightOf="@+id/blizNameTxt"
                android:layout_weight="1"
                app:srcCompat="@drawable/bronze_bar_start" />

            <TextView
                android:id="@+id/bar"
                android:layout_width="wrap_content"
                android:layout_height="18sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/barStart"
                android:layout_toRightOf="@+id/barStart"
                android:background="@drawable/bronze_bar"
                android:gravity="center_vertical"
                android:text="\?\?"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/starBarStart"
                android:layout_width="wrap_content"
                android:layout_height="18sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/bar"
                android:layout_toRightOf="@+id/bar"
                android:layout_weight="1"
                android:visibility="gone"
                app:srcCompat="@drawable/bronze_star_bar_start" />

            <ImageView
                android:id="@+id/star1"
                android:layout_width="wrap_content"
                android:layout_height="18sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/starBarStart"
                android:layout_toRightOf="@+id/starBarStart"
                android:layout_weight="1"
                android:visibility="gone"
                app:srcCompat="@drawable/bronze_star" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="wrap_content"
                android:layout_height="18sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/star1"
                android:layout_toRightOf="@+id/star1"
                android:layout_weight="1"
                android:visibility="gone"
                app:srcCompat="@drawable/bronze_star" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="wrap_content"
                android:layout_height="18sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/star2"
                android:layout_toRightOf="@+id/star2"
                android:layout_weight="1"
                android:visibility="gone"
                app:srcCompat="@drawable/bronze_star" />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="wrap_content"
                android:layout_height="18sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/star3"
                android:layout_toRightOf="@+id/star3"
                android:layout_weight="1"
                android:visibility="gone"
                app:srcCompat="@drawable/bronze_star" />

            <ImageView
                android:id="@+id/star5"
                android:layout_width="wrap_content"
                android:layout_height="18sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/star4"
                android:layout_toRightOf="@+id/star4"
                android:layout_weight="1"
                android:visibility="gone"
                app:srcCompat="@drawable/bronze_star" />

            <ImageView
                android:id="@+id/starBarEnd"
                android:layout_width="wrap_content"
                android:layout_height="18sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/star5"
                android:layout_toRightOf="@+id/star5"
                android:layout_weight="1"
                android:visibility="gone"
                app:srcCompat="@drawable/bronze_star_bar_end" />

            <ImageView
                android:id="@+id/barEnd"
                android:layout_width="wrap_content"
                android:layout_height="18sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/starBarEnd"
                android:layout_toRightOf="@+id/starBarEnd"
                android:layout_weight="1"
                app:srcCompat="@drawable/bronze_bar_end" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/blizNameBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:theme="@style/lightBlue.Button"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/readyTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:text="Ready to play?"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/joinBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Room"
        android:textSize="24sp"
        android:theme="@style/lightBlue.Button" />

    <Button
        android:id="@+id/createBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Room"
        android:textSize="24sp"
        android:theme="@style/lightBlue.Button" />

    <Button
        android:id="@+id/logoutBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Log out"
        android:textSize="18sp"
        android:theme="@style/lightBlue.Button" />
</LinearLayout>
