<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDarkBlue"
        android:orientation="vertical"
        tools:context="com.nantel.louis.random3v3.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/heroImg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:elevation="24dp"
                app:srcCompat="@drawable/empty_portrait" />

            <TextView
                android:id="@+id/hero1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/player1"
                android:layout_toEndOf="@+id/heroImg1"
                android:layout_toRightOf="@+id/heroImg1"
                android:background="#66000000"
                android:gravity="start"
                android:paddingLeft="175dp"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/player1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/heroImg1"
                android:layout_toRightOf="@+id/heroImg1"
                android:background="#66000000"
                android:gravity="start"
                android:paddingLeft="175dp"
                android:text="Waiting..."
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/heroImg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:elevation="24dp"
                app:srcCompat="@drawable/empty_portrait" />

            <TextView
                android:id="@+id/hero2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/player2"
                android:layout_toEndOf="@+id/heroImg2"
                android:layout_toRightOf="@+id/heroImg2"
                android:background="#66000000"
                android:gravity="start"
                android:paddingLeft="175dp"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/player2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/heroImg2"
                android:layout_toRightOf="@+id/heroImg2"
                android:background="#66000000"
                android:gravity="start"
                android:paddingLeft="175dp"
                android:text="Waiting..."
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="36sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/heroImg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:elevation="24dp"
                app:srcCompat="@drawable/empty_portrait" />

            <TextView
                android:id="@+id/hero3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/player3"
                android:layout_toEndOf="@+id/heroImg3"
                android:layout_toRightOf="@+id/heroImg3"
                android:background="#66000000"
                android:gravity="start"
                android:paddingLeft="175dp"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/player3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/heroImg3"
                android:layout_toRightOf="@+id/heroImg3"
                android:background="#66000000"
                android:gravity="start"
                android:paddingLeft="175dp"
                android:text="Waiting..."
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="36sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/roomCodeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightBlue"
            android:text="Room Code: AAAA"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/generateBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:theme="@style/orange.Button"
            android:visibility="gone"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="443dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:background="@drawable/owbg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/settingsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:text="Settings"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/savePresetBtn"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/settingsTxt"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="SAVE"
                android:theme="@style/lightBlue.Button" />
        </RelativeLayout>

        <ExpandableListView
            android:id="@+id/settingsListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="10dp" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>